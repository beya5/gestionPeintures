<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="/path/to/favicon.svg">
        {% block stylesheets %}
            <style>
                .custom-input {
                    border-radius: 12px;
                    padding: 12px;
                    border: 1px solid #ced4da;
                    transition: all 0.3s ease-in-out;
                }

                .custom-input:focus {
                    border-color: #0d6efd;
                    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
                }
            </style>
        {% endblock %}
        {% block javascripts %}
            {% if importmap is defined %}
                {% block importmap %}{{ importmap('app') }}{% endblock %}
            {% else %}
                <!-- ImportMap is not configured -->
            {% endif %}
        {% endblock %}
    </head>
    <body>
        {% block body %}{# Content goes here in child templates #}{% endblock %}
    </body>
</html>
